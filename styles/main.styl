html,
body
    padding: 0
    margin: 0
    font-family 'Segoe UI', Arial
    height: 100%

body
    font-size: 14px

.view
    display: table
    width: 100%
    height: 100%

.control-container,
.canvas-container
    height: 100%
    padding: 0
    margin: 0
    vertical-align: top
    display: table-cell
    width: 50%

.canvas-container
    padding-right: 15px
    max-width: 50%

.control-container
    padding-left: 15px
    min-width: 50%

.group
    display: table
    width: 100%
    &__name,
    &__input
        display: table-cell
        vertical-align: middle
    &__name
        width: 33%
        max-width: 33%
        min-width: 33%
    &__result
        float: right
        color: #333

.input-group
    width: 100%
    display: table
    &__input,
    &__start,
    &__end
        display: table-cell
        vertical-align: middle
    &__start,
    &__end
        min-width: 25px
    &__start
        text-align: right
        padding-right: 10px
    &__end
        padding-left: 10px
    &__input
        width: 100%
    &__color
        width: 100%
        display: inline-block
        min-height: 25px
        margin: 10px 0
        content: ''
        border-top-left-radius: 100px
        border-bottom-left-radius: 100px

.canvas
    padding 0
    border-right: 1px solid #ddd
    display: inline-block
    vertical-align: top

.form
    display inline-block
    vert-align: top

.copy
    position: absolute
    left: 10px
    top: 10px
    line-height: 30px
    color: #999

